№1
#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include<locale.h>
#include<math.h>
int main()
{
	setlocale(LC_ALL, "Rus");
	int a, b, c, x;
	printf("Введите значения A и B соответственно: ");
	scanf("%d%d", &a, &b);
	if (a > 2 && b <= 3) {
		printf("A > 2 и B <= 3: True");
	}
	else
		printf("A > 2 и B <= 3: False");

}
